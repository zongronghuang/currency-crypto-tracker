# Read stdin lines from Git (local-ref remote-ref remote-branch)
while read local_ref local_sha remote_ref remote_sha; do
  # Extract remote branch name (refs/heads/main â†’ main)
  remote_branch="${remote_ref#refs/heads/}"

    if [ "$remote_branch" = "main" ] || [ "$remote_branch" = "master" ]; then
      echo ""
      echo "âš ï¸  Direct push to '$remote_branch' is not allowed."
      echo "ğŸ”’  You must open a pull request instead."
      echo ""
      exit 1
    fi
done

